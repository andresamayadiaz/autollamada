<h1>Listing buttons</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Status</th>
    <th>Tel</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @user.buttons.each do |button| %>
  <tr>
    <td><%= button.name %></td>
    <td><%= button.status %></td>
    <td><%= button.tel %></td>
    <td><%= button.user %></td>
    <td><%= link_to 'Show', button %></td>
    <td><%= link_to 'Edit', edit_button_path(button) %></td>
    <td><%= link_to 'Destroy', button, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

