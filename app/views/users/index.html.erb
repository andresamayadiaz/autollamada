<h1>Listing users</h1>

<table class="table table-condensed table-hover">
  <tr>
  	<th>Name</th>
    <th>Email</th>
    <th>Password</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
  	<td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= user.password %></td>
    <td><%= user.status %></td>
    <td><%= link_to 'Show', user, class: "btn btn-small" %></td>
    <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-small" %></td>
    <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-small btn-danger" %></td>
  </tr>
<% end %>
</table>

